{
    "app-id": "com.github.Qv2ray",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.13",
    "sdk": "org.kde.Sdk",
    "command": "qv2ray",
    "rename-desktop-file": "qv2ray.desktop",
    "rename-icon": "qv2ray",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--socket=session-bus",
        "--filesystem=host",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "grpc",
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/grpc/grpc.git",
                    "branch": "v1.26.0"
                },
                {
                    "type": "patch",
                    "path": "hug-grpc-deadlock.patch"
                }
            ]
        },
        {
            "name": "protobuf",
            "build-options": {
                "prefix": "/app"
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/protocolbuffers/protobuf.git",
                    "branch": "v3.11.2"
                }
            ]
        },
        {
            "name": "qv2ray",
            "buildsystem": "qmake",
            "config-opts": [
                "CONFIG+=no_increase_build_number"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lhy0403/Qv2ray.git",
                    "branch": "v1.99.4"
                },
                {
                    "type": "patch",
                    "path": "qv2ray.patch"
                },
                {
                    "type": "shell",
                    "commands": [
                        "tools/grpc_gen.sh"
                    ]
                }
            ]
        }
    ]
}