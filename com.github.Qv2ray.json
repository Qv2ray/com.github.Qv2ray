{
    "app-id": "com.github.Qv2ray",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.13",
    "sdk": "org.kde.Sdk",
    "command": "qv2ray",
    "rename-desktop-file": "qv2ray.desktop",
    "rename-icon": "qv2ray",
    "rename-appdata-file": "qv2ray.metainfo.xml",
    "cleanup": [
        "/include",
        "*.la",
        "*.a"
    ],
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=host",
        "--socket=session-bus",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "grpc",
            "no-autogen": true,
            "cleanup": [
                "/bin",
                "/lib/debug"
            ],
            "make-install-args": [
                "prefix=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/grpc/grpc.git",
                    "tag": "v1.26.0",
                    "commit": "de893acb6aef88484a427e64b96727e4926fdcfd"
                },
                {
                    "type": "patch",
                    "path": "hug-grpc-deadlock.patch"
                }
            ]
        },
        {
            "name": "protobuf",
            "build-options": {
                "prefix": "/app"
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/protocolbuffers/protobuf.git",
                    "tag": "v3.11.2",
                    "commit": "fe1790ca0df67173702f70d5646b82f48f412b99"
                }
            ]
        },
        {
            "name": "qv2ray",
            "buildsystem": "qmake",
            "config-opts": [
                "CONFIG+=no_increase_build_number build_flatpak"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lhy0403/Qv2ray.git",
                    "branch": "dev",
                    "commit": "a887fbf86e5c3ddcb9d0ef391c6b0d53bed040bc"
                },
                {
                    "type": "shell",
                    "commands": [
                        "tools/grpc_gen.sh"
                    ]
                }
            ]
        }
    ]
}