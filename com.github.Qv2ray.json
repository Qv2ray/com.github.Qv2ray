{
    "app-id": "com.github.Qv2ray",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.13",
    "sdk": "org.kde.Sdk",
    "command": "qv2ray",
    "rename-desktop-file": "qv2ray.desktop",
    "rename-icon": "qv2ray",
    "rename-appdata-file": "qv2ray.appdata.xml",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--socket=pulseaudio",
        "--filesystem=host",
        "--talk-name=org.kde.StatusNotifierWatcher",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=com.canonical.Unity",
        "--talk-name=org.freedesktop.portal.Fcitx",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "grpc",
            "no-autogen": true,
            "make-install-args": [
                "prefix=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/grpc/grpc.git",
                    "tag": "v1.26.0",
                    "commit": "de893acb6aef88484a427e64b96727e4926fdcfd"
                },
                {
                    "type": "patch",
                    "path": "hug-grpc-deadlock.patch"
                }
            ]
        },
        {
            "name": "protobuf",
            "build-options": {
                "prefix": "/app"
            },
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/protocolbuffers/protobuf.git",
                    "tag": "v3.11.2",
                    "commit": "fe1790ca0df67173702f70d5646b82f48f412b99"
                }
            ]
        },
        {
            "name": "qv2ray",
            "buildsystem": "qmake",
            "config-opts": [
                "CONFIG+=no_increase_build_number build_flatpak"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/lhy0403/Qv2ray.git",
                    "branch": "dev",
                    "commit": "2d212cd1b6fbd67537cb940cf482df888f6bd1ea"
                },
                {
                    "type": "shell",
                    "commands": [
                        "tools/grpc_gen.sh"
                    ]
                }
            ]
        }
    ]
}